
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:javaee="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee"
         version="3.0">

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>by.epam.jwd.testingApp.service.filters.EncodingFilter</filter-class>
    <init-param>
      <param-name>active</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <servlet-name>mainServlet</servlet-name>
  </filter-mapping>

  <filter>
    <filter-name>LocalizationFilter</filter-name>
    <filter-class>by.epam.jwd.testingApp.service.filters.LocalizationFilter</filter-class>
    <init-param>
      <param-name>active</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>LocalizationFilter</filter-name>
    <servlet-name>mainServlet</servlet-name>
  </filter-mapping>


  <filter>
    <filter-name>SideBarCreator</filter-name>
    <filter-class>by.epam.jwd.testingApp.service.filters.SideBarCreator</filter-class>
    <init-param>
      <param-name>active</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>SideBarCreator</filter-name>
    <servlet-name>mainServlet</servlet-name>
  </filter-mapping>

  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>by.epam.jwd.testingApp.service.filters.AuthenticationFilter</filter-class>
    <init-param>
      <param-name>active</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <servlet-name>mainServlet</servlet-name>
  </filter-mapping>

  <filter>
    <filter-name>AccessLvlCheckFilter</filter-name>
    <filter-class>by.epam.jwd.testingApp.service.filters.AccessLvlCheckFilter</filter-class>
    <init-param>
      <param-name>active</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>AccessLvlCheckFilter</filter-name>
    <servlet-name>mainServlet</servlet-name>
  </filter-mapping>


  <servlet>
    <servlet-name>mainServlet</servlet-name>
    <servlet-class>by.epam.jwd.testingApp.controller.MainServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>mainServlet</servlet-name>
    <url-pattern>/controller/*</url-pattern>
  </servlet-mapping>

  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/errorPage.jsp</location>
  </error-page>

</web-app>

